{
    "compilerOptions": {
      "target": "es6",
      "baseUrl": ".",
      "paths": {
        "app/*": ["src/*"]
      },
      "lib": ["dom", "dom.iterable", "esnext"],
      "typeRoots": ["./node_modules/@types", "./declarations.d.ts", "./declarations.env.d.ts"],
      "noImplicitAny": true,
      "allowJs": true,
      "checkJs": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react"
    },
    "files": ["./declarations.d.ts", "./declarations.env.d.ts"],
    "include": ["./src"],
    "exclude": ["node_modules/*"]
  }